{{#partial "content"}}
    {{#if editSquad}}
        <h1>Edit {{squad.name}} Squad</h1>
        <div class="form-align">
        <form action="/squads/{{squad.id}}" method="post">

            <div class="form-group">
                <label for="name">Name</label>
                <input id="newName" name="newName" type="text" value="{{squad.newName}}" class="form-control hero-form">
            </div>
            <br>
            <div class="form-group">
                <label for="newSize">Size</label>
                <input id="newSize" name="newSize" type="number" value="{{squad.newSize}}" class="form-control hero-form">
            </div>
            <br>
            <div class="form-group">
                <label for="newCause">Cause</label>
                <textarea id="newCause" name="newCause" type="text" value="{{squad.newCause}}" class="form-control hero-form"></textarea>
            </div>
            <br>
            <button type="submit" class="btn btn-default">Edit Squad</button>
        </form>
        </div>
    {{else}}
        <h1>Add a new Squad!</h1>
        <div class="form-align">
        <form action="/squads" method="post">
            <div class="form-group">
                <label for="name">Squad Name</label>
                <input id="name" name="name" type="text" class="form-control hero-form">
            </div>
            <br>
            <div class="form-group">
                <label for="size">Squad Size</label>
                <input id="size" name="size" type="number" class="form-control hero-form">
            </div>
            <br>
            <div class="form-group">
                <label for="cause">Squad Cause</label>
                <textarea id="cause" name="cause" type="text" class="form-control hero-form"></textarea>
            </div>
            <br>
            <button type="submit" class="btn btn-default">Create Squad</button>
        </form>
        </div>
    {{/if}}
{{/partial}}

{{> layout.hbs}}
