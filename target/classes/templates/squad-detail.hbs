{{#partial "content"}}
    <h1>{{squad.name}} Squad</h1>
    <p style="text-align: center;">Here are all the heroes listed in this squad:</p>
    <div class="form-align">
    <ul>
        {{#each heroes}}
            <li>
                <p><a href="/squads/{{squad.id}}/heroes/{{id}}">{{name}}</a></p>
            </li>
        {{/each}}
    </ul>
    </div>
    <div style="text-align:center">
    <a href="/squads/{{squad.id}}/edit" style="text-align:center">Edit  the {{squad.name}} squad</a><br>
    <a href="/squads/{{squad.id}}/delete" style="text-align:center">DELETE the {{squad.name}} squad</a>
    </div>
{{/partial}}

{{> layout.hbs}}
